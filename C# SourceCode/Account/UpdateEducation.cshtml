@model UpdateEducationVM

@{
    ViewBag.Title = "Account | Update Education";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <!-- Title Section -->
            <div class="text-center mb-4">
                <h2 class="fw-bold">Update Education</h2>
            </div>

            <!-- Form Section -->
            <form class="row g-4" asp-action="UpdateEducation" method="post" enctype="multipart/form-data">
                <!-- Course or Qualification -->
                <div class="col-md-12">
                    <label asp-for="Course" class="form-label fw-bold">Course or Qualification</label>
                    <input asp-for="Course" class="form-control" placeholder="Enter your course or qualification" autofocus>
                    <span asp-validation-for="Course" class="text-danger"></span>
                </div>

                <!-- Institution -->
                <div class="col-md-12">
                    <label asp-for="Institution" class="form-label fw-bold">Institution</label>
                    <input asp-for="Institution" class="form-control" placeholder="Enter your institution name">
                    <span asp-validation-for="Institution" class="text-danger"></span>
                </div>

                <!-- Start Date -->
                <div class="col-md-6">
                    <label asp-for="StartDate" class="form-label fw-bold">Start Date</label>
                    <input asp-for="StartDate" id="StartDate" type="month" class="form-control" value="@(Model.StartDate?.ToString("yyyy-MM") ?? "")">
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <!-- End Date -->
                <div class="col-md-6">
                    <label asp-for="EndDate" class="form-label fw-bold">End Date</label>
                    <input asp-for="EndDate" id="EndDate" type="month" class="form-control" value="@(Model.EndDate?.ToString("yyyy-MM") ?? "")">
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <!-- Hidden Field for ID -->
                <input asp-for="Id" type="hidden">

                <!-- Buttons -->
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-primary px-5">Update</button>
                    <a href="/Account/UpdateProfile" class="btn btn-outline-secondary px-5">Cancel</a>
                </div>
            </form>

            <!-- Delete Section -->
            <div class="text-center mt-4">
                <form asp-action="DeleteEducation" method="post" onsubmit="return confirm('Are you sure you want to delete this record?');">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger px-5">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section foot{
    <script>
        document.querySelector("form").addEventListener("submit", function (event) {
            const startDate = document.getElementById("StartDate").value;
            const endDate = document.getElementById("EndDate").value;

            if (startDate && endDate && new Date(endDate) <= new Date(startDate)) {
                event.preventDefault(); // Prevent form submission
                alert("End Date cannot be earlier than Start Date.");
            }
        });
    </script>
}