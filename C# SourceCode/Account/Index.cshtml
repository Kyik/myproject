@model IEnumerable<Job>

@{
    ViewBag.Title = "Home | Index";
}

<p>@Model.Count() record(s)</p>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Gender</th>
        <th></th>
    </tr>
    @foreach (var s in Model)
    {
        var isFavourite = ViewBag.FavouriteIds != null && ViewBag.FavouriteIds.Contains(s.Id);
        <tr>
            <td>@s.Id</td>
            <td>@s.Title</td>
            <td>@s.Type</td>
            <td>
                <button data-get="/Account/Detail/@s.Id">Detail</button>
                <button data-post="/Account/ToggleFavourite/@s.Id">
                    @(isFavourite ? "Unfavourite" : "Favourite")
                </button>
            </td>
        </tr>
    }


</table>
<a href="/Account/Favourites">View Favourites</a>
