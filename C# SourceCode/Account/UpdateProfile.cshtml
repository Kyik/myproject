<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>



<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <!-- Title Section -->
            <div class="text-center mb-4">
                <h2 class="fw-bold">Update Profile</h2>
                <p class="text-muted">@Model.Email</p>
            </div>

            <!-- Form Section -->
            <form class="row g-3" style="margin:20px auto;" method="post" enctype="multipart/form-data">
                <!-- Name -->
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label fw-bold">Full Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter your full name" autofocus>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Contact -->
                <div class="col-md-6">
                    <label asp-for="Contact" class="form-label fw-bold">Contact Number</label>
                    <input asp-for="Contact" class="form-control" placeholder="Enter your contact number">
                    <span asp-validation-for="Contact" class="text-danger"></span>
                </div>

                <!-- Photo -->
                <div class="col-md-12">
                    <label asp-for="Photo" class="form-label fw-bold">Profile Photo</label>
                    <div id="dropArea" class="border rounded p-3 text-center" style="position: relative; cursor: pointer;">
                        <p class="text-muted mb-3">Drag and drop your photo here or click to upload</p>
                        <input asp-for="Photo" type="file" id="fileInput" class="form-control d-none" accept="image/jpeg,image/png">
                        <img id="previewImage" src="/photos/@Model.PhotoURL" alt="Profile Photo" class="rounded-circle mx-auto d-block"
                             style="width: 100px; height: 100px; border: 1px solid #ddd;-o-object-fit:cover !important;">
                    </div>
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>

                <!-- Date of Birth -->
                @if (User.IsInRole("Member") || User.IsInRole("Instructor") || User.IsInRole("Admin"))
                {
                    <div class="col-md-6">
                        <label asp-for="DateOfBirth" class="form-label fw-bold">Date of Birth</label>
                        <input asp-for="DateOfBirth" type="date" class="form-control">
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                }

                <!-- Update and Reset Buttons -->
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-primary px-4">Update</button>

                    <a style="margin-top:10px;"href="/Account/UpdatePassword" class="btn btn-outline-secondary">Change Password</a>
                    <button type="reset" class="btn btn-outline-secondary px-4">Reset</button>
                </div>
            </form>
        </div>
    </div>
</div>

@if (User.IsInRole("Member"))
{
    <div class="container my-5">
        <!-- Career History Section -->
        <div class="mb-5">
            <h3 class="fw-bold">Career History</h3>
            @if (Model.Careers.Any())
            {
                <div class="list-group">
                    @foreach (var crh in Model.Careers)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1 fw-bold">@crh.Career</h5>
                                <p class="mb-1">@crh.CompanyName</p>
                                <p class="mb-1 text-muted">
                                    @crh.StartDatec?.ToString("MMM yyyy") -
                                    @crh.EndDatec?.ToString("MMM yyyy")
                                </p>
                            </div>
                            <a href="/Account/UpdateCareer/@crh.Id" class="text-decoration-none">Edit </a>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">No career history added yet.</p>
            }
            <button class="btn btn-primary mt-3" onclick="window.location.href='/Account/AddCareer'">Add Role</button>
        </div>

        <!-- Education Section -->
        <div>
            <h3 class="fw-bold">Education</h3>
            @if (Model.Educations.Any())
            {
                <div class="list-group">
                    @foreach (var edu in Model.Educations)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1 fw-bold">@edu.Course</h5>
                                <p class="mb-1">@edu.Institution</p>
                                <p class="mb-1 text-muted">
                                    Finished @(edu.EndDate?.ToString("yyyy") ?? "N/A")
                                </p>
                            </div>
                            <a href="/Account/UpdateEducation/@edu.Id" class="text-decoration-none">Edit </a>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">No education details added yet.</p>
            }
            <button class="btn btn-primary mt-3" onclick="window.location.href='/Account/AddEducation'">Add Education</button>
        </div>
    </div>
}


    <!-- Delete Account Button -->
    <form method="post" asp-action="DeleteAccount">
        <div style="text-align:center;margin-bottom:10px;">
        <section>
            <button type="button" class="btn btn-danger" onclick="openModal()">Delete Account</button>
        </section>
    </div>
    </form>

    <!-- Custom Modal -->
    <div id="customModal" class="modal" style="display: @(ViewBag.ShowModal == true ? "block" : "none");">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Confirm Account Deletion</h5>
                <button type="button" class="close-btn" onclick="closeModal()">×</button>
            </div>
            <div class="modal-body">
                <p>Please enter your password to confirm account deletion.</p>

                <!-- Display error messages -->
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["Error"]
                    </div>
                }

                <form method="post" asp-action="DeleteAccount">
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="Password" class="form-control" required>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger">Confirm Delete</button>
                        <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section foot {

        <script>
            // Open Modal
            function openModal() {
                document.getElementById('customModal').style.display = 'block';
            }

            // Close Modal
            function closeModal() {
                document.getElementById('customModal').style.display = 'none';
            }

        @if (ViewBag.ShowModal == true)
        {
            <text>openModal();</text>
        }
        </script>

    <script>
        const dropArea = document.getElementById('dropArea');
        const fileInput = document.getElementById('fileInput');
        const previewImage = document.getElementById('previewImage');

        // Highlight the drop area when dragging a file over it
        dropArea.addEventListener('dragover', (event) => {
            event.preventDefault();
            dropArea.classList.add('border-primary');
        });

        // Remove the highlight when dragging a file leaves the area
        dropArea.addEventListener('dragleave', () => {
            dropArea.classList.remove('border-primary');
        });

        // Handle the drop event
        dropArea.addEventListener('drop', (event) => {
            event.preventDefault();
            dropArea.classList.remove('border-primary');
            const files = event.dataTransfer.files;
            if (files.length) {
                fileInput.files = files;
                updatePreview(files[0]);
            }
        });

        // Open the file input dialog when the drop area is clicked
        dropArea.addEventListener('click', () => {
            fileInput.click();
        });

        // Handle the file selection via the file input
        fileInput.addEventListener('change', () => {
            if (fileInput.files.length) {
                updatePreview(fileInput.files[0]);
            }
        });

        // Function to update the preview image
        function updatePreview(file) {
            const reader = new FileReader();
            reader.onload = () => {
                previewImage.src = reader.result;
            };
            reader.readAsDataURL(file);
        }
    </script>
    }
