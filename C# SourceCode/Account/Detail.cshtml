@model Tuple<Course, ReportVM>

@{
    ViewBag.Title = "Account | Detail";
    var student = Model.Item1; // Student details
    var reportVM = Model.Item2; // Report form data
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Student Details -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Student Details</h5>
                    <table class="table">
                        <tr>
                            <th>Id</th>
                            <td>@student.Id</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>@student.Name</td>
                        </tr>
                        <tr>
                            <th>Gender</th>
                            <td>@student.Description</td>
                        </tr>
                    </table>
                </div>
            </div>

            <!-- Report Form -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0 d-flex justify-content-between align-items-center" id="toggleReportForm">
                        Report this student
                        <span id="toggleIcon" style="cursor: pointer;">&#9660;</span>
                    </h5>
                </div>
                <div class="card-body" id="reportFormContainer" style="display: none;">
                    <form method="post" asp-action="SubmitReport">
                        <input type="hidden" name="JobID" value="@student.Id" />

                        <!-- Email -->
                        <div class="mb-3">
                            <label for="ReporterEmail" class="form-label">Your Email Address</label>
                            <input id="ReporterEmail" name="ReporterEmail" class="form-control" value="@User.Identity.Name" readonly />
                        </div>

                        <!-- Reason -->
                        <div class="mb-3">
                            <label for="Reason" class="form-label">Reason for Reporting</label>
                            <select id="Reason" name="Reason" class="form-select">
                                <option value="">Please select</option>
                                <option value="Fraudulent">Fraudulent</option>
                                <option value="Discrimination">Discrimination</option>
                                <option value="Misleading">Misleading</option>
                            </select>
                        </div>

                        <!-- Additional Comments -->
                        <div class="mb-3">
                            <label for="AddReason" class="form-label">Additional Comments</label>
                            <textarea id="AddReason" name="AddReason" class="form-control" placeholder="Add activities, projects, or additional details related to the report (optional)"></textarea>
                        </div>

                        <!-- Note -->
                        <div class="alert alert-warning">
                            <small>To help fast track investigation, please include any relevant details that prompted you to report this student as fraudulent/misleading/discriminatory.</small>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Submit Report</button>
                            <button type="button" id="cancelReportForm" class="btn btn-secondary">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Back Button -->
            <div class="mt-4 text-center">
                <a href="/Account/Index" class="btn btn-light">Back to Index</a>
            </div>
        </div>
    </div>
</div>

@section foot {
    <script>
        const toggleReportForm = document.getElementById("toggleReportForm");
        const reportFormContainer = document.getElementById("reportFormContainer");
        const toggleIcon = document.getElementById("toggleIcon");
        const cancelReportForm = document.getElementById("cancelReportForm");

        toggleReportForm.addEventListener("click", () => {
            const isHidden = reportFormContainer.style.display === "none";
            reportFormContainer.style.display = isHidden ? "block" : "none";
            toggleIcon.innerHTML = isHidden ? "&#9650;" : "&#9660;";
        });

        cancelReportForm.addEventListener("click", () => {
            reportFormContainer.style.display = "none";
            toggleIcon.innerHTML = "&#9660;";
        });
    </script>
}
