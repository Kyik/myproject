@model ResetPasswordVM

@{
    ViewBag.Title = "Account | Reset Password";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg" style="width: 100%; max-width: 400px; border-radius: 10px;">
        <div class="card-body text-center">
            <!-- Title Section -->
            <h2 class="fw-bold mb-3">Forgot your password</h2>
            <p class="text-muted mb-4">Please enter the email address you'd like your password reset information sent to.</p>

            <!-- Form Section -->
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold visually-hidden">Enter email address</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter email address" autofocus>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Request reset link</button>
                </div>
            </form>
        </div>
    </div>
</div>
