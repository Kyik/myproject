@model UpdatePasswordVM

@{
    ViewBag.Title = "Account | Update Password";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <!-- Title Section -->
            <div class="text-center mb-4">
                <h2 class="fw-bold">Update Password</h2>
                <p class="text-muted">Ensure your account stays secure by updating your password.</p>
            </div>

            <!-- Form Section -->
            <form class="row g-4" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Current Password -->
                <div class="col-md-12">
                    <label asp-for="Current" class="form-label fw-bold">Current Password</label>
                    <input asp-for="Current" type="password" class="form-control" placeholder="Enter your current password" autofocus>
                    <span asp-validation-for="Current" class="text-danger"></span>
                </div>

                <!-- New Password -->
                <div class="col-md-12">
                    <label asp-for="New" class="form-label fw-bold">New Password</label>
                    <input asp-for="New" type="password" class="form-control" placeholder="Enter a new password">
                    <span asp-validation-for="New" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="col-md-12">
                    <label asp-for="Confirm" class="form-label fw-bold">Confirm Password</label>
                    <input asp-for="Confirm" type="password" class="form-control" placeholder="Re-enter your new password">
                    <span asp-validation-for="Confirm" class="text-danger"></span>
                </div>

                <!-- Update and Reset Buttons -->
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-primary px-5">Update</button>
                    <button type="reset" class="btn btn-outline-secondary px-5">Reset</button>
                </div>
            </form>
        </div>
    </div>
</div>
